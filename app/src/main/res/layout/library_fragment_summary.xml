<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ideaPool.SummaryFragmentPool"
    android:background="#0e440b">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="A City Official recently voted on an issue"
                android:id="@+id/idea_summary"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="25sp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_margin="5sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/idea_description"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5sp"
                android:ellipsize="end"
                android:lines="2"
                android:text="Mayor Puss I. Boots recently voted to fund a an expansion of the Provo library." />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="24sp"
                android:layout_margin="5sp"
                android:layout_marginBottom="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="18,054 In Favor"
                    android:id="@+id/textView8"
                    android:textColor="@color/accentGreen"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="238 Not In Favor"
                    android:id="@+id/textView9"
                    android:textColor="@color/accentRed"
                    android:layout_gravity="center|right"
                    android:layout_weight=".5"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_comment_button_label"
                android:id="@+id/button" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottom_button_bar_height"
        android:layout_gravity="bottom">

        <ImageButton
            android:layout_width="@dimen/ifo_button_width"
            android:layout_height="match_parent"
            android:id="@+id/in_favor_button"
            android:src="@mipmap/in_favor_of_button_image"
            android:scaleType="fitXY"
            android:padding="0dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/share_button"
            android:id="@+id/finish_button"
            android:layout_weight="1.14"
            android:background="@color/buttonGrey" />

        <ImageButton
            android:layout_width="@dimen/ifo_button_width"
            android:layout_height="match_parent"
            android:id="@+id/not_in_favor_button"
            android:src="@mipmap/not_in_favor_of_button_image"
            android:scaleType="fitXY"
            android:padding="0dp" />
    </LinearLayout>

</FrameLayout>
