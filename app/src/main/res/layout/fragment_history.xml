<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="January 31, 2016"
            android:id="@+id/textView2"
            android:paddingBottom="5sp"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:background="#f5f5f5"
            android:textColor="#757575"
            android:gravity="center_vertical|center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:minHeight="65dp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:foregroundGravity="fill_vertical"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="65sp"
                    android:layout_height="65sp"
                    android:id="@+id/creator_image"
                    android:contentDescription="@string/picture_description"
                    android:src="@mipmap/pete_cat"
                    android:scaleType="fitXY"
                    android:padding="0dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Idea proposed by Pete BarnCat"
                    android:id="@+id/comment"
                    android:gravity="center_vertical|center_horizontal" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="February 2, 2016"
            android:id="@+id/textView3"
            android:paddingBottom="5sp"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:background="#f5f5f5"
            android:textColor="#757575"
            android:gravity="center_vertical|center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:minHeight="65dp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:foregroundGravity="fill_vertical"
                android:weightSum="1"
                android:padding="0dp">

                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/imageButton"
                    android:contentDescription="@string/picture_description"
                    android:scaleType="fitXY"
                    android:src="@mipmap/social_event"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Idea reached 1,000 In-Favor-Ofs"
                    android:id="@+id/textView4"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:minHeight="65dp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:foregroundGravity="fill_vertical"
                android:weightSum="1" >

                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/imageButton3"
                    android:contentDescription="@string/picture_description"
                    android:src="@mipmap/p"
                    android:padding="0dp"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Officially recognized as city issue"
                    android:id="@+id/textView6"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="February 6, 2016"
            android:id="@+id/textView5"
            android:paddingBottom="5sp"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:background="#f5f5f5"
            android:textColor="#757575"
            android:gravity="center_vertical|center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:minHeight="65dp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:foregroundGravity="fill_vertical"
                android:weightSum="1" >

                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/imageButton4"
                    android:contentDescription="@string/picture_description"
                    android:src="@mipmap/puss_in_boots"
                    android:padding="0dp"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Proposed by Puss I. Boots, Provo City Mayor, during of Provo City Council meeting"
                    android:id="@+id/textView7"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottom_button_bar_height"
        android:layout_gravity="bottom" >

        <ImageButton
            android:layout_width="@dimen/ifo_button_width"
            android:layout_height="match_parent"
            android:id="@+id/imageButton5"
            android:src="@mipmap/in_favor_of_button_image"
            android:scaleType="fitXY"
            android:padding="0dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/share_button"
            android:id="@+id/create_idea_button"
            android:layout_weight="1.14"
            android:background="@color/buttonGrey" />

        <ImageButton
            android:layout_width="@dimen/ifo_button_width"
            android:layout_height="match_parent"
            android:id="@+id/imageButton6"
            android:src="@mipmap/not_in_favor_of_button_image"
            android:scaleType="fitXY"
            android:padding="0dp" />
    </LinearLayout>

</FrameLayout>
