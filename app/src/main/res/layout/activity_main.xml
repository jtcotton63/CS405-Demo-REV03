<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.josepher.voicebox.MainActivity"
    android:background="#424242"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="77sp"
        android:id="@+id/menu"
        android:layout_alignParentStart="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65sp">

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/action_items_button"
                android:contentDescription="@string/picture_description"
                android:background="#424242"
                android:src="@mipmap/ic_notifications_black_48dp" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/locality_change_left_button"
                android:contentDescription="@string/picture_description"
                android:src="@mipmap/ic_chevron_left_black_48dp"
                android:adjustViewBounds="false"
                android:scaleType="centerCrop"
                android:background="#424242" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="United States of America"
                android:id="@+id/locality_title_view"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:layout_weight=".5" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/locality_change_right_button"
                android:contentDescription="@string/picture_description"
                android:scaleType="fitEnd"
                android:background="#424242"
                android:src="@mipmap/ic_chevron_right_black_48dp" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/menu_button"
                android:contentDescription="@string/picture_description"
                android:background="#424242"
                android:src="@mipmap/ic_menu_black_48dp" />

        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" />
    </LinearLayout>

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        app:pstsShouldExpand="true"
        app:pstsTextAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="23sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" />

</LinearLayout>
