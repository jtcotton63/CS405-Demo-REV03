    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="77sp"
        android:id="@+id/menu"
        android:layout_alignParentStart="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65sp">

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/action_items_button"
                android:contentDescription="@string/picture_description"
                android:background="#424242"
                android:src="@mipmap/ic_notifications_black_48dp" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/locality_change_left_button"
                android:contentDescription="@string/picture_description"
                android:src="@mipmap/ic_chevron_left_black_48dp"
                android:adjustViewBounds="false"
                android:scaleType="centerCrop"
                android:background="#424242" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="United States of America"
                android:id="@+id/locality_title_view"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:layout_weight=".5" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/locality_change_right_button"
                android:contentDescription="@string/picture_description"
                android:scaleType="fitEnd"
                android:background="#424242"
                android:src="@mipmap/ic_chevron_right_black_48dp" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/menu_button"
                android:contentDescription="@string/picture_description"
                android:background="#424242"
                android:src="@mipmap/ic_menu_black_48dp" />

        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" />
    </LinearLayout>
